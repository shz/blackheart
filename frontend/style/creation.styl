orange = rgb(255, 85, 50)

body > div
  transition opacity 0.6s
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color #EEE
  opacity 0
  z-index 1
  box-sizing border-box
  overflow hidden

  &.underway
    opacity 1
    z-index 100

.logo
  background-image url('/frontend/image/logo-orange.png')
  position absolute
  top 30px
  right 30px
  color orange
  padding-top 44px
  background-repeat no-repeat
  background-position top right

  &:after
    content "Human Preservation Initiative"

#initiation
  text-align center

  > div
    transition opacity 1.6s linear
    opacity 0

    &.visible
      opacity 1

  .initiation-piece
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding-top 100px
    box-sizing border-box
    cursor pointer

    h1
      font-size 60px
      margin 0 40px
      line-height 1

    .img
      width 500px
      height 500px
      margin 20px auto
      background-repeat no-repeat
      background-position center

    h2
      font-size 40px
      text-transform none
      line-height 1
      margin 0 0 10px 0

    &.orange
      background-color orange
      background-image url('/frontend/image/pattern-white.png')
      .img
        background-image: url('/frontend/image/skull-large-black.png'), url('/frontend/image/hex-white.png')
      h1
        color white
      h2
        color black

    &.white
      background-color white
      background-image url('/frontend/image/pattern-black.png')
      .img
        background-image: url('/frontend/image/smiley-large-white.png'), url('/frontend/image/hex-black.png')
      h2
        color orange

#intrusion
  transition opacity 1s
  background-color black
  background-image url('/frontend/image/pattern-white.png')
  text-align center

  > div
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  .first
    width 100%
    position absolute
    top 400px
    left 0

    object
      z-index 2
    p
      transition all 0.4s
      opacity 0
      -webkit-transform translateY(-20px)
      color white
      text-transform uppercase
      font-size 11pt
      z-index 1

      &.visible
        opacity 1
        -webkit-transform none

      &.fade
        opacity 0

  .second
    padding-top 120px

    .logo
      transition opacity 0.6s
      opacity 0

    .year
      position absolute
      top 370px
      left 50px
      color white
      font-size 260px
      text-align left
      -webkit-transform translateX(768px)
      opacity 1

      &.visible
        transition -webkit-transform 0.6s
        -webkit-transform none

      &.done
        transition color 0.6s, opacity 0.6s 1s, -webkit-transform 0.6s 1s
        opacity 0
        color orange
        -webkit-transform scale(0.8)

    p
      transition opacity 1s, color 2s
      opacity 0
      color white
      font-size 40px

      &.visible
        opacity 1
      &.orange
        color orange

    &.visible
      .logo
        opacity 1
