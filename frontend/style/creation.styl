orange = rgb(255, 85, 50)

body > div
  transition opacity 0.6s
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color #EEE
  opacity 0
  z-index 1
  box-sizing border-box

  &.underway
    opacity 1
    z-index 100

#initiation
  text-align center

  > div
    transition opacity 5s linear
    opacity 0

    &.visible
      opacity 1

  .initiation-piece
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding-top 90px
    box-sizing border-box
    cursor pointer

    h1
      font-size 65px
      margin 0 10px
      line-height 1

    .img
      width 500px
      height 500px
      margin 20px auto
      background-repeat no-repeat
      background-position center

    h2
      font-size 45px
      text-transform none
      line-height 1
      margin 0 0 10px 0

    &.orange
      background-color orange
      background-image url('/frontend/image/pattern-white.png')
      .img
        background-image: url('/frontend/image/skull-large-black.png'), url('/frontend/image/hex-white.png')
      h1
        color white
      h2
        color black

    &.white
      background-color white
      background-image url('/frontend/image/pattern-black.png')
      .img
        background-image: url('/frontend/image/smiley-large-white.png'), url('/frontend/image/hex-black.png')
      h2
        color orange

#intrusion
  transition opacity 2s
  background-color black
  background-image url('/frontend/image/pattern-white.png')
  text-align center

  > div
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  .first
    padding-top 400px;

    object
      z-index 2
    p
      transition all 0.6s
      opacity 0
      -webkit-transform translateY(-20px)
      color white
      text-transform uppercase
      font-size 11pt
      z-index 1

      &.visible
        opacity 1
        -webkit-transform none

      &.fade
        opacity 0
