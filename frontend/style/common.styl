padding = 20px
width = 768px - padding
height = 1024px - padding

title-font = "Lucida Grande", "Lucida Sans", sans-serif
body-font = "Helvetica Neue", "Helvetica", "Arial", sans-serif

html
  background-color white
  color black
  width 100%
  height 100%

body
  width width
  height height
  position absolute
  top 50%
  left 50%
  margin-top - (height / 2)
  margin-left - (width / 2)

h1
  font-family title-font
  font-weight bold
  font-size 32pt
  text-transform uppercase

h2
  font-family title-font
  font-weight bold
  font-size 28pt
  text-transform uppercase

h3
  font-family title-font
  font-weight 300
  font-size 16pt

p
  font-family body-font
  font-weight 300
  font-size 13pt
