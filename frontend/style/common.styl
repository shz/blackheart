padding = 0px
width = 768px - padding
height = 1024px - padding

orange = rgb(255, 85, 50)

@font-face
  font-family 'collator'
  src url('/frontend/font/collator.otf')

html
  background-color white
  color black
  width 100%
  height 100%
  font-family collator, sans-serif
  min-height 1024px

body
  width width
  height height
  position absolute
  top 50%
  left 50%
  margin-top - (height / 2)
  margin-left - (width / 2)

h1
  font-weight normal
  font-size 32pt
  text-transform uppercase

h2
  font-weight normal
  font-size 28pt
  text-transform uppercase

h3
  font-weight normal
  font-size 16pt

p
  font-size 13pt

@media screen and (max-height: 1024px)
  body
    margin-top 0
    top 0
